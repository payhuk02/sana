{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Progressive strict mode activation */
    "strict": false, // Will be enabled progressively
    "noUnusedLocals": true, // ✅ Enabled - helps catch unused code
    "noUnusedParameters": true, // ✅ Enabled - helps catch unused parameters
    "noImplicitAny": false, // ⚠️ Will enable after fixing implicit any errors
    "strictNullChecks": true, // ✅ Enabled - ensures null/undefined safety
    "noFallthroughCasesInSwitch": true, // ✅ Enabled - prevents switch bugs

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
